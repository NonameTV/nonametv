sub MoveMessage {
  my( $msg, $foldername ) = @_;

  if( not exists $folders->{$foldername} ) {
    $folders->{$foldername} = 
	$rootfolder->openSubFolder( $targetprefix . $foldername, 
				    access => 'rw' );
  }

  print("Moved a mail to $foldername\n");

  $msg->moveTo( $folders->{$foldername} );
}
