     return "suomi.radio.yle.fi" if $filename =~ /^r03/i;		# r03_20131208.xml
     return "teema.yle.fi" if $filename =~ /^yte/i;				# yte_20131208.xml
     return "tv1.yle.fi" if $filename =~ /^tv1/i;				# tv1_20131208.xml
     return "tv2.yle.fi" if $filename =~ /^tv2/i;				# tv2_20131208.xml
     return "tv5.fi" if $filename =~ /^tv5/i;					# tv5_20131208.xml
     return "tvfinland.yle.fi" if $filename =~ /^tvf/i;			# tvf_20131208.xml
     return "vega.radio.yle.fi" if $filename =~ /^r04/i;		# r04_20131208.xml
